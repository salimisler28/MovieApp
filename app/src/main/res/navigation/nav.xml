<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.teknasyon.movieapp.ui.fragments.home.HomeFragment"
        android:label="Tv Shows" >
        <action
            android:id="@+id/action_homeFragment_to_tvShowDetailFragment"
            app:destination="@id/tvShowDetailFragment"
            app:enterAnim="@anim/fragment_close_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
    </fragment>
    <fragment
        android:id="@+id/tvShowDetailFragment"
        android:name="com.teknasyon.movieapp.ui.fragments.tvshowdetail.TvShowDetailFragment"
        android:label="TvShowDetailFragment" />
</navigation>